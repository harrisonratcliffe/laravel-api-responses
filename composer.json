{
    "name": "harrisonratcliffe/laravel-api-responses",
    "description": "A Laravel package to easily handle API responses and exceptions",
    "keywords": [
        "laravel",
        "laravel-api-responses",
        "laravel-api-handler",
        "api",
        "exceptions",
        "responses"
    ],
    "homepage": "https://github.com/harrisonratcliffe/laravel-api-responses",
    "license": "MIT",
    "authors": [
        {
            "name": "Harrison Ratcliffe",
            "email": "email@harrisonr.uk"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/support": ">=7.0",
        "spatie/laravel-package-tools": "^1.14"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Harrisonratcliffe\\LaravelApiResponses\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Harrisonratcliffe\\LaravelApiResponses\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "vendor/bin/pint",
        "format": "vendor/bin/rector process",
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "pest": "vendor/bin/pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Harrisonratcliffe\\LaravelApiResponses\\LaravelApiResponsesServiceProvider"
            ],
            "aliases": {
                "LaravelApiHandler": "Harrisonratcliffe\\LaravelApiResponses\\Facades\\LaravelApiResponses"
            }
        },
        "minimum-stability": "stable",
        "prefer-stable": true
    }
}
